<Pane fx:id="parentPane" maxHeight="650.0" prefHeight="650.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zadyraichuk.controller.SelectorUIController">
   <stylesheets>
      <URL value="@../css/selector.css" />
   </stylesheets>
   <VBox fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="550.0" scaleShape="false">
      <HBox id="top-panel" prefHeight="80.0" prefWidth="200.0">
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0">
            <Button id="settings-btn" mnemonicParsing="false" onAction="#onSettingsClick" prefHeight="50.0" prefWidth="50.0" styleClass="transparent-btn">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-gear-fill" iconSize="36" />
               </graphic>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="390.0">
            <ComboBox id="select-combo-box" fx:id="wheelComboBox" onHiding="#hideWheelComboBox" onShown="#showWheelComboBox" prefHeight="40.0" prefWidth="340.0" styleClass="combo-box">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ComboBox>
         </VBox>
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0">
            <Button mnemonicParsing="false" onAction="#onNewClick" prefHeight="42.0" prefWidth="42.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-plus" iconSize="24" scaleX="1.6" scaleY="1.6" />
               </graphic>
               <styleClass>
                  <String fx:value="rounded-btn" />
                  <String fx:value="transparent-btn" />
                  <String fx:value="add-btn" />
               </styleClass>
            </Button>
         </VBox>
      </HBox>
      <StackPane prefHeight="570.0" prefWidth="550.0" styleClass="wheel-container">
         <Circle radius="188.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
            <effect>
               <Shadow />
            </effect>
         </Circle>
         <Circle fill="#b5b5b5" radius="190.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
         <Group fx:id="wheelGroup" />
         <Arc length="30.0" radiusX="90.0" radiusY="55.0" startAngle="75.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" type="ROUND" StackPane.alignment="TOP_CENTER">
            <StackPane.margin>
               <Insets top="84.0" />
            </StackPane.margin>
            <effect>
               <Shadow />
            </effect>
         </Arc>
         <Arc fill="#e88164" length="30.0" radiusX="100.0" radiusY="60.0" startAngle="75.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" type="ROUND" StackPane.alignment="TOP_CENTER">
            <StackPane.margin>
               <Insets top="80.0" />
            </StackPane.margin>
         </Arc>
         <Circle radius="43.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
            <effect>
               <Shadow />
            </effect>
         </Circle>
         <Button id="roll-btn" mnemonicParsing="false" onAction="#onRollClick" prefHeight="90.0" prefWidth="90.0" styleClass="rounded-btn" textAlignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <font>
               <Font name="Calibri" size="33.0" />
            </font>
            <graphic>
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="92.0" text="ROLL" textAlignment="CENTER">
                  <font>
                     <Font name="Calibri Bold" size="34.0" />
                  </font>
               </Label>
            </graphic>
         </Button>
         <TextField id="result-field" fx:id="resultField" alignment="CENTER" editable="false" text="Result" StackPane.alignment="TOP_CENTER">
            <font>
               <Font name="Calibri" size="28.0" />
            </font>
            <StackPane.margin>
               <Insets top="20.0" />
            </StackPane.margin>
         </TextField>
         <Button id="edit-btn" mnemonicParsing="false" onAction="#onEditClick" prefHeight="60.0" prefWidth="60.0" styleClass="rounded-btn" StackPane.alignment="BOTTOM_RIGHT">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
               <FontIcon iconLiteral="bi-pen-fill" iconSize="30" />
            </graphic>
            <StackPane.margin>
               <Insets bottom="50.0" right="50.0" />
            </StackPane.margin>
         </Button>
      </StackPane>
   </VBox>
   <Rectangle height="650.0" onMouseClicked="#onShadowClick" opacity="0.4" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Rectangle>
   <VBox fx:id="settingsPane" alignment="TOP_CENTER" prefHeight="550.0" prefWidth="550.0" styleClass="settings-window" stylesheets="@../css/edit-list-element.css">
      <children>
         <ScrollPane hbarPolicy="NEVER" prefHeight="550.0" prefWidth="550.0">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>
            <content>
               <VBox prefWidth="510.0">
                  <children>
                     <Label text="Current Wheel Properties" textFill="#e88164">
                        <font>
                           <Font name="System Bold" size="20.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </Label>
                     <CheckBox fx:id="isRationalCheckBox" mnemonicParsing="false" onAction="#setRational" text="use rational model" textFill="#e88164">
                        <font>
                           <Font name="System Bold" size="17.0" />
                        </font>
                        <padding>
                           <Insets left="15.0" />
                        </padding>
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <VBox.margin>
                           <Insets bottom="5.0" />
                        </VBox.margin>
                     </CheckBox>
                     <HBox>
                        <children>
                           <Label text="Speed" textFill="#e88164">
                              <font>
                                 <Font name="System Bold" size="17.0" />
                              </font>
                              <HBox.margin>
                                 <Insets right="10.0" />
                              </HBox.margin>
                           </Label>
                           <ComboBox fx:id="speedComboBox" onHiding="#hideSpeedComboBox" onShown="#showSpeedComboBox" prefWidth="150.0" styleClass="combo-box">
                              <cursor>
                                 <Cursor fx:constant="HAND" />
                              </cursor>
                           </ComboBox>
                        </children>
                        <padding>
                           <Insets left="15.0" />
                        </padding>
                     </HBox>
                  </children>
               </VBox>
            </content>
         </ScrollPane>
      </children>
   </VBox>
   <Rectangle height="650.0" onMouseClicked="#onShadowClick" opacity="0.4" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Rectangle>
   <VBox fx:id="editPane" alignment="TOP_CENTER" prefHeight="550.0" prefWidth="550.0" styleClass="edit-window" stylesheets="@../css/edit-list-element.css" visible="false">
      <HBox prefHeight="80.0" prefWidth="200.0">
         <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0">
            <Button mnemonicParsing="false" onAction="#onCloseEditClick" prefHeight="40.0" prefWidth="40.0" text="Close">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0">
            <TextField maxWidth="300.0" prefHeight="35.0" prefWidth="300.0">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" />
      </HBox>
      <Label prefWidth="550.0" text="Weight">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
         <padding>
            <Insets left="350.0" />
         </padding>
      </Label>
      <ScrollPane hbarPolicy="NEVER" prefHeight="330.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <ListView prefHeight="0.0" prefWidth="510.0" stylesheets="@../css/edit-list-element.css">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </ListView>
      </ScrollPane>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onNewVariantClick" prefHeight="35.0" prefWidth="200.0" style="-fx-background-radius: 8;" text="+">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSaveClick" prefHeight="35.0" prefWidth="300.0" style="-fx-background-radius: 15;" text="Done">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </VBox>
   <Rectangle height="650.0" onMouseClicked="#onShadowClick" opacity="0.4" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Rectangle>
   <VBox fx:id="wheelsPane" alignment="TOP_CENTER" prefHeight="550.0" prefWidth="550.0" styleClass="edit-window" stylesheets="@../css/wheel-list-element.css" visible="false">
      <HBox prefHeight="80.0" prefWidth="200.0">
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <Button mnemonicParsing="false" onAction="#onCloseSelectClick" prefHeight="40.0" prefWidth="40.0" text="Close">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0" />
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <Button mnemonicParsing="false" onAction="#onNewClick" prefHeight="40.0" prefWidth="40.0" text="New">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </VBox>
      </HBox>
      <ScrollPane hbarPolicy="NEVER" prefHeight="470.0" prefWidth="550.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <ListView prefHeight="430.0" prefWidth="510.0" stylesheets="@../css/wheel-list-element.css">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </ListView>
      </ScrollPane>
   </VBox>
</Pane>
