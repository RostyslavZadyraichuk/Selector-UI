<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane fx:id="parentPane" stylesheets="@../css/selector.css" xmlns="http://javafx.com/javafx/18"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.zadyraichuk.controller.SelectorUIController">
   <VBox fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
         minWidth="-Infinity" prefHeight="650.0" prefWidth="550.0" scaleShape="false">
      <HBox id="top-panel" prefHeight="80.0" prefWidth="200.0">
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0">
            <Button id="settings-btn" mnemonicParsing="false" onAction="#onSettingsClick"
                    prefHeight="50.0" prefWidth="50.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-gear-fill" iconSize="36"/>
               </graphic>
               <styleClass>
                  <String fx:value="transparent-btn"/>
                  <String fx:value="btn"/>
                  <String fx:value="orange-text"/>
               </styleClass>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="390.0">
            <ComboBox id="select-combo-box" fx:id="wheelComboBox" onHiding="#hideWheelComboBox"
                      onShown="#showWheelComboBox" prefHeight="40.0" prefWidth="340.0"
                      styleClass="combo-box">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </ComboBox>
         </VBox>
         <VBox alignment="CENTER" prefHeight="80.0" prefWidth="80.0">
            <Button mnemonicParsing="false" onAction="#onNewClick" prefHeight="42.0"
                    prefWidth="42.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-plus" iconSize="24" scaleX="1.6"
                            scaleY="1.6"/>
               </graphic>
               <styleClass>
                  <String fx:value="transparent-btn"/>
                  <String fx:value="add-btn"/>
                  <String fx:value="radius-100"/>
                  <String fx:value="btn"/>
                  <String fx:value="orange-text"/>
               </styleClass>
            </Button>
         </VBox>
      </HBox>
      <StackPane prefHeight="570.0" prefWidth="550.0" styleClass="wheel-container">
         <Circle radius="188.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
            <effect>
               <Shadow/>
            </effect>
         </Circle>
         <Circle fill="#b5b5b5" radius="190.0" stroke="BLACK" strokeType="INSIDE"
                 strokeWidth="0.0"/>
         <Group fx:id="wheelGroup"/>
         <Arc length="30.0" radiusX="90.0" radiusY="55.0" startAngle="75.0" stroke="BLACK"
              strokeType="INSIDE" strokeWidth="0.0" type="ROUND" StackPane.alignment="TOP_CENTER">
            <StackPane.margin>
               <Insets top="84.0"/>
            </StackPane.margin>
            <effect>
               <Shadow/>
            </effect>
         </Arc>
         <Arc fill="#e88164" length="30.0" radiusX="100.0" radiusY="60.0" startAngle="75.0"
              stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" type="ROUND"
              StackPane.alignment="TOP_CENTER">
            <StackPane.margin>
               <Insets top="80.0"/>
            </StackPane.margin>
         </Arc>
         <Circle radius="43.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
            <effect>
               <Shadow/>
            </effect>
         </Circle>
         <Button id="roll-btn" mnemonicParsing="false" onAction="#onRollClick" prefHeight="90.0"
                 prefWidth="90.0" textAlignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
               <Font name="Calibri" size="33.0"/>
            </font>
            <graphic>
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="92.0"
                      text="ROLL" textAlignment="CENTER">
                  <font>
                     <Font name="Calibri Bold" size="34.0"/>
                  </font>
               </Label>
            </graphic>
            <styleClass>
               <String fx:value="radius-100"/>
               <String fx:value="btn"/>
               <String fx:value="orange-btn"/>
               <String fx:value="gray-text"/>
            </styleClass>
         </Button>
         <TextField id="result-field" fx:id="resultField" alignment="CENTER" editable="false"
                    text="Result" StackPane.alignment="TOP_CENTER">
            <font>
               <Font name="Calibri" size="28.0"/>
            </font>
            <StackPane.margin>
               <Insets top="20.0"/>
            </StackPane.margin>
         </TextField>
         <Button id="edit-btn" mnemonicParsing="false" onAction="#onEditClick" prefHeight="60.0"
                 prefWidth="60.0" StackPane.alignment="BOTTOM_RIGHT">
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <graphic>
               <FontIcon iconLiteral="bi-pen-fill" iconSize="30"/>
            </graphic>
            <StackPane.margin>
               <Insets bottom="50.0" right="50.0"/>
            </StackPane.margin>
            <styleClass>
               <String fx:value="radius-100"/>
               <String fx:value="orange-btn"/>
               <String fx:value="btn"/>
               <String fx:value="gray-text"/>
            </styleClass>
         </Button>
      </StackPane>
   </VBox>
   <Rectangle height="650.0" onMouseClicked="#onShadowClick" opacity="0.4" stroke="BLACK"
              strokeType="INSIDE" strokeWidth="0.0" visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Rectangle>
   <AnchorPane fx:id="settingsPane" maxHeight="550.0" prefHeight="550.0" prefWidth="550.0"
               styleClass="settings-window" translateY="650.0" visible="false"
               StackPane.alignment="TOP_CENTER">
      <ScrollPane hbarPolicy="NEVER" prefHeight="550.0" prefWidth="550.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="30.0"/>
         </padding>
         <VBox prefWidth="510.0">
            <Label text="Current Wheel Properties" textFill="#e88164">
               <font>
                  <Font name="System Bold" size="20.0"/>
               </font>
               <VBox.margin>
                  <Insets bottom="10.0"/>
               </VBox.margin>
            </Label>
            <CheckBox fx:id="isRationalCheckBox" mnemonicParsing="false" onAction="#setRational"
                      text="use rational model" textFill="#e88164">
               <font>
                  <Font name="System Bold" size="17.0"/>
               </font>
               <padding>
                  <Insets left="15.0"/>
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <VBox.margin>
                  <Insets bottom="5.0"/>
               </VBox.margin>
            </CheckBox>
            <HBox>
               <padding>
                  <Insets left="15.0"/>
               </padding>
               <Label text="Speed" textFill="#e88164">
                  <font>
                     <Font name="System Bold" size="17.0"/>
                  </font>
                  <HBox.margin>
                     <Insets right="10.0"/>
                  </HBox.margin>
               </Label>
               <ComboBox fx:id="speedComboBox" onHiding="#hideSpeedComboBox"
                         onShown="#showSpeedComboBox" prefWidth="150.0" styleClass="combo-box">
                  <cursor>
                     <Cursor fx:constant="HAND"/>
                  </cursor>
               </ComboBox>
            </HBox>
         </VBox>
      </ScrollPane>
   </AnchorPane>
   <Rectangle height="650.0" onMouseClicked="#onShadowClick" opacity="0.4" stroke="BLACK"
              strokeType="INSIDE" strokeWidth="0.0" visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Rectangle>
   <VBox fx:id="editPane" alignment="TOP_CENTER" prefHeight="550.0" prefWidth="550.0"
         styleClass="edit-window" stylesheets="@../css/edit-list-element.css">
      <HBox prefHeight="55.0">
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <Button id="close-btn" alignment="CENTER" mnemonicParsing="false"
                    onAction="#onCloseEditClick" prefHeight="40.0" prefWidth="40.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-x-square-fill" iconSize="36"/>
               </graphic>
               <styleClass>
                  <String fx:value="transparent-btn"/>
                  <String fx:value="btn"/>
                  <String fx:value="orange-text"/>
               </styleClass>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0">
            <TextField fx:id="editNameField" maxWidth="300.0" prefHeight="35.0" prefWidth="300.0"
                       styleClass="text-field">
               <cursor>
                  <Cursor fx:constant="TEXT"/>
               </cursor>
            </TextField>
         </VBox>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0"/>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="45.0">
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
         <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="275.0">
            <padding>
               <Insets left="40.0"/>
            </padding>
            <Label text="Colors:" textFill="#e88164">
               <font>
                  <Font name="Calibri" size="20.0"/>
               </font>
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
            </Label>
            <TextField fx:id="colorsTextField" editable="false" prefWidth="50.0"
                       styleClass="text-field"/>
            <Separator orientation="VERTICAL" prefHeight="200.0" prefWidth="10.0"
                       visible="false"/>
            <VBox alignment="CENTER">
               <Button mnemonicParsing="false" onAction="#onColorsUpClick">
                  <styleClass>
                     <String fx:value="btn"/>
                     <String fx:value="orange-btn"/>
                     <String fx:value="gray-text"/>
                     <String fx:value="up-btn"/>
                  </styleClass>
                  <graphic>
                     <FontIcon iconLiteral="bi-caret-up-fill"/>
                  </graphic>
               </Button>
               <Separator prefHeight="5.0" visible="false"/>
               <Button mnemonicParsing="false" onAction="#onColorsDownClick">
                  <styleClass>
                     <String fx:value="btn"/>
                     <String fx:value="orange-btn"/>
                     <String fx:value="gray-text"/>
                     <String fx:value="down-btn"/>
                  </styleClass>
                  <graphic>
                     <FontIcon iconLiteral="bi-caret-down-fill"/>
                  </graphic>
               </Button>
            </VBox>
         </HBox>
         <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="275.0">
            <HBox.margin>
               <Insets/>
            </HBox.margin>
            <padding>
               <Insets right="40.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#onChangeColorsClick" prefHeight="36.0"
                    prefWidth="170.0" text="Change Colors">
               <styleClass>
                  <String fx:value="btn"/>
                  <String fx:value="orange-btn"/>
                  <String fx:value="gray-text"/>
                  <String fx:value="radius-8"/>
               </styleClass>
               <font>
                  <Font name="Calibri Bold" size="20.0"/>
               </font>
               <graphic>
                  <FontIcon iconLiteral="bi-arrow-repeat" iconSize="28"/>
               </graphic>
            </Button>
         </HBox>
      </HBox>
      <Label prefWidth="550.0" text="Weight">
         <VBox.margin>
            <Insets bottom="5.0"/>
         </VBox.margin>
         <padding>
            <Insets left="375.0"/>
         </padding>
      </Label>
      <ListView fx:id="editListView" prefHeight="400.0" styleClass="edit-list-view">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
      </ListView>
      <StackPane prefHeight="118.0" prefWidth="200.0">
         <Button id="add-variant-button" alignment="CENTER" contentDisplay="CENTER"
                 mnemonicParsing="false" onAction="#onNewVariantClick" prefHeight="35.0"
                 prefWidth="200.0" translateY="-25.0">
            <opaqueInsets>
               <Insets/>
            </opaqueInsets>
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <graphic>
               <FontIcon iconColor="#e88164" iconLiteral="bi-plus" iconSize="30"/>
            </graphic>
            <styleClass>
               <String fx:value="radius-8"/>
               <String fx:value="btn"/>
               <String fx:value="orange-btn"/>
               <String fx:value="gray-text"/>
            </styleClass>
         </Button>
         <Button fx:id="saveBtn" alignment="CENTER" contentDisplay="CENTER"
                 mnemonicParsing="false" onAction="#onSaveClick" prefHeight="35.0"
                 prefWidth="300.0" text="Save" translateY="20.0">
            <opaqueInsets>
               <Insets/>
            </opaqueInsets>
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
               <Font name="Calibri Bold" size="23.0"/>
            </font>
            <styleClass>
               <String fx:value="radius-15"/>
               <String fx:value="btn"/>
               <String fx:value="orange-btn"/>
               <String fx:value="gray-text"/>
            </styleClass>
         </Button>
         <Button fx:id="createBtn" alignment="CENTER" contentDisplay="CENTER"
                 mnemonicParsing="false" onAction="#onCreateClick" prefHeight="35.0"
                 prefWidth="300.0" text="Create" translateY="20.0">
            <opaqueInsets>
               <Insets/>
            </opaqueInsets>
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
               <Font name="Calibri Bold" size="23.0"/>
            </font>
            <styleClass>
               <String fx:value="radius-15"/>
               <String fx:value="btn"/>
               <String fx:value="orange-btn"/>
               <String fx:value="gray-text"/>
            </styleClass>
         </Button>
      </StackPane>
   </VBox>
   <Rectangle height="650.0" onMouseClicked="#onShadowClick" opacity="0.4" stroke="BLACK"
              strokeType="INSIDE" strokeWidth="0.0" visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Rectangle>
   <VBox fx:id="wheelsPane" alignment="TOP_CENTER" prefHeight="550.0" prefWidth="550.0"
         styleClass="edit-window" stylesheets="@../css/wheel-list-element.css" visible="false">
      <HBox prefHeight="80.0" prefWidth="200.0">
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <Button mnemonicParsing="false" onAction="#onCloseSelectClick" prefHeight="40.0"
                    prefWidth="40.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-x-square-fill" iconSize="36"/>
               </graphic>
               <styleClass>
                  <String fx:value="btn"/>
                  <String fx:value="transparent-btn"/>
                  <String fx:value="orange-text"/>
               </styleClass>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0"/>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <Button graphicTextGap="0.0" mnemonicParsing="false" onAction="#onNewClick"
                    prefHeight="40.0" prefWidth="40.0">
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
               <graphic>
                  <FontIcon iconColor="#e88164" iconLiteral="bi-plus" iconSize="32"/>
               </graphic>
               <styleClass>
                  <String fx:value="transparent-btn"/>
                  <String fx:value="orange-text"/>
                  <String fx:value="add-btn"/>
                  <String fx:value="radius-100"/>
                  <String fx:value="btn"/>
               </styleClass>
            </Button>
         </VBox>
      </HBox>
      <ScrollPane hbarPolicy="NEVER" prefHeight="470.0" prefWidth="550.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <ListView prefHeight="430.0" prefWidth="510.0"
                   stylesheets="@../css/wheel-list-element.css">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
         </ListView>
      </ScrollPane>
   </VBox>
   <Rectangle height="650.0" opacity="0.4" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"
              visible="false" width="550.0">
      <cursor>
         <Cursor fx:constant="DEFAULT"/>
      </cursor>
   </Rectangle>
   <TitledPane id="error-dialog" fx:id="errorDialog" animated="false" collapsible="false"
               maxWidth="270.0" minWidth="270.0" prefWidth="270.0" text="Error" visible="false">
      <font>
         <Font name="Calibri" size="16.0"/>
      </font>
      <VBox alignment="CENTER" fillWidth="false" prefWidth="100.0"
            style="-fx-background-radius: 15px;">
         <Label fx:id="errorLabel" maxWidth="270.0" styleClass="orange-text" text="Label">
            <VBox.margin>
               <Insets bottom="10.0"/>
            </VBox.margin>
            <font>
               <Font size="16.0"/>
            </font>
         </Label>
         <Button mnemonicParsing="false" onAction="#onErrorOkClick" text="OK">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
            <styleClass>
               <String fx:value="btn"/>
               <String fx:value="orange-btn"/>
               <String fx:value="gray-text"/>
            </styleClass>
         </Button>
      </VBox>
   </TitledPane>
</StackPane>
